{
  "manifest_version": 3,
  "name": "Kufokus",
  "version": "1.0.0",
  "description": "Selesaikan pekerjaan tanpa hambatan",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": ["*://www.instagram.com/*"],

  "background": {
    "service_worker": "background.js"
  }
}
